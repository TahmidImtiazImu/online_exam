<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".teacher_edit_assignment">

   <com.google.android.material.textfield.TextInputLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:padding="20dp"
       app:boxBackgroundColor="@android:color/transparent"
       android:background="@android:color/transparent">
>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/edit_assignment_topic"
           android:text="Edit topic name"
           >

       </EditText>
   </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        app:boxBackgroundColor="@android:color/transparent"
        android:background="@android:color/transparent">
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_assignment_duration"
            android:text="Edit topic duration"
            >

        </EditText>
    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pdf_img"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:id="@+id/edit_ques_pdf">

    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit"
        android:padding="5dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="8dp"
        android:id="@+id/edit_view"
        >

    </ImageView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:id="@+id/edit_upload_text"
        >

    </TextView>
    <EditText
        android:id="@+id/edit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:layout_gravity="center"
        android:hint="Enter Date" />

    <EditText
        android:id="@+id/edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Enter Time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have unsaved changes"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/gradv2"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:id="@+id/you_have_unsaved_changes"
        android:visibility="invisible"
        >

    </TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:id="@+id/save_changes"
        android:text="Save"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:visibility="invisible"
        >

    </Button>

</LinearLayout>