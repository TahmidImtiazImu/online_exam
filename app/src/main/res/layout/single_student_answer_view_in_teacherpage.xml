<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/single_student_answer">

        <TextView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:text="1)"
            android:id="@+id/student_answer_count"
            android:textSize="20dp"

            >

        </TextView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Tahmid Imtiaz Imu"
            android:id="@+id/student_answer_name"
            android:textSize="20dp"
            android:textStyle="italic"
            >

        </TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_picture_as_pdf"
            android:id="@+id/student_answer_pdficon"
            >

        </ImageView>


    </LinearLayout>

</androidx.cardview.widget.CardView>